<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="themollo.app.mollo.analysis.MonthlyAnalysisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llSleepHourContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:alpha="0.4"
                    android:text="@string/avg_sleep_time"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llSleepHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSleepHour"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_marginTop="6.5dp"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:alpha="0.4"
                    android:text="@string/longest_sleep_time"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llDeepSleepHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text2"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDeepSleepHour"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_marginTop="6.5dp"
                        android:text="9.5"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:alpha="0.4"
                    android:text="@string/shortest_sleep_time"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llLightSleepHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text3"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLightSleepHour"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_marginTop="6.5dp"
                        android:text="3.2"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.5dp">

            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:alpha="0.4"
                    android:gravity="center_vertical"
                    android:text="@string/avg_sleep_quaility"
                    android:textColor="@color/white"
                    android:textSize="10.5sp" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="55.5dp"
                    android:layout_below="@id/text4"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="80%"
                    android:textColor="@color/white"
                    android:textSize="45.5dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="149.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.5dp">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:alpha="0.4"
                    android:gravity="center_vertical"
                    android:text="@string/most_favorite"
                    android:textColor="@color/white"
                    android:textSize="10.5sp" />

                <TextView
                    android:layout_width="149.5dp"
                    android:layout_height="55.5dp"
                    android:layout_below="@id/text5"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/peppermint"
                    android:textColor="@color/white"
                    android:textSize="18.5dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">



        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lcLineChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="100%"
                android:textColor="#fff"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="50"
                android:textColor="#fff"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#fff"
                android:textSize="10dp" />


        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
