<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_background_gradient"
    android:clipChildren="false"
    tools:context="themollo.app.mollo.analysis.AnalysisActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="265dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/backgraound_copy"
        android:alpha="0.4"/>

    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="11.75dp"
        android:layout_marginTop="10.25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.5dp"
            android:text="@string/sleeing_pattern"
            android:textColor="@color/white"
            android:textSize="14.5sp"
            android:textStyle="bold" />

    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tlTab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="62dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white"/>

    <themollo.app.mollo.util.CustomViewPager
        android:id="@+id/vpAnalysis"
        android:layout_below="@id/tlTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</RelativeLayout>
