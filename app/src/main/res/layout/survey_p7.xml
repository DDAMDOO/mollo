<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="themollo.app.mollo.survey.survey_fragment.Survey_p3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87.5dp"
        android:gravity="center"
        android:letterSpacing="0"
        android:text="@string/survey_6_text"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/sbHours"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:fontName="RoundR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per"
                android:textColor="@color/white"
                android:textSize="14.5sp"
                app:fontName="RoundR" />

        </LinearLayout>

    </RelativeLayout>


    <SeekBar
        android:id="@+id/sbHours"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:progressDrawable="@drawable/seekbar_background"
        android:max="4"
        android:progress="1"
        android:thumb="@mipmap/oval" />


</RelativeLayout>
