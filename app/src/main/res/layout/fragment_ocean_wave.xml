<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_background_gradient"
    tools:context="themollo.app.mollo.sleeping.fragment.OceanWave">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ocean_wave"
        android:alpha="0.43"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/texture_wave"/>

    <TextView
        android:id="@+id/tvCurSound"
        android:layout_width="226dp"
        android:layout_height="77.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:gravity="center"
        android:text="OCEAN WAVE"
        android:textColor="@color/white"
        android:textSize="32.5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPlayTime"
        app:fontName="RoundR"
        android:layout_width="136dp"
        android:layout_height="29.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192.5dp"
        android:gravity="center"
        android:text="04:30:00"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>
