<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlBackground"
    android:background="@drawable/base_background_gradient"
    tools:context="themollo.app.mollo.lullaby.NowPlayingActivity">

    <ImageView
        android:id="@+id/ivNowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rainy_day"
        android:alpha="0.43"/>
    
    <TextView
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginTop="132dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="RAINY DAY"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="303.5dp"
        android:layout_height="77.5dp"
        android:layout_marginTop="187.5dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:gravity="center"
        android:text="00:21:40"
        android:layout_centerHorizontal="true"
        app:fontName="RoundL"/>


    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="11.75dp"
        android:layout_marginTop="10.25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icn_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.5dp"
            android:text="@string/now_playing"
            android:textColor="@color/white"
            android:textSize="14.5sp"
            android:textStyle="bold" />

    </LinearLayout>


    <SeekBar
        android:id="@+id/sbPlayTime"
        android:layout_above="@id/ppbPlayPauseButton"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:progressDrawable="@drawable/seekbar_play"
        android:progress="50"
        android:thumb="@mipmap/oval" />

    <jp.co.recruit_lifestyle.android.widget.PlayPauseButton
        android:id="@+id/ppbPlayPauseButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="143dp" />

    <ImageView
        android:id="@+id/ivPrev"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@id/ppbPlayPauseButton"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="138dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/prev"/>

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/ppbPlayPauseButton"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="138dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/prev"
        android:rotation="180"/>





</RelativeLayout>
