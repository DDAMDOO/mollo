<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical"
    tools:context="themollo.app.mollo.survey.survey_fragment.Survey_p2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/survey_2_text"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl1020s"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp">


                    <ImageView
                        android:id="@+id/iv1020sCircle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gradient_button"
                        android:visibility="visible"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:text="@string/age1020s"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl3040s"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp">


                    <ImageView
                        android:id="@+id/iv3040sCircle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gradient_button"
                        android:visibility="gone"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:text="@string/age3040s"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl50s"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp">


                    <ImageView
                        android:id="@+id/iv50sCircle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gradient_button"
                        android:visibility="gone"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:text="@string/age50s"/>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
