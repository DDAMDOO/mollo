<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="20dp"
        android:height="20dp">
        <shape android:shape="oval">

            <stroke
                android:width="3.5dp"
                android:color="@color/radio_stroke_color" />

            <solid
                android:color="@color/white"/>

        </shape>
    </item>

    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid
                android:color="@color/radio_click_color"/>
        </shape>
    </item>


</layer-list>